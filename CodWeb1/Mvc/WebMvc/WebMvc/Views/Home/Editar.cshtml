@model WebMvc.Models.Carros
@{
    ViewBag.nomePag = "Editando - " + Model.Marca;
}

<div>
    <fieldset>
        <legend>Cadastro de Carros</legend>
        <form action="/Home/Editar" method="post">
            <div>
                <label>Id: </label>
                <input type="number" id="id" name="id" value="@Model.Id" readonly="readonly" />
            </div>
            <div>
                <label>Marca: </label>
                <input type="text" id="marca" name="marca" value="@Model.Marca" />
            </div>
            <div>
                <label>Descrição: </label>
                <input type="text" id="modelo" name="modelo" value="@Model.Modelo" />
            </div>
            <input type="submit" value="Salvar" />
        </form>
    </fieldset>
</div>